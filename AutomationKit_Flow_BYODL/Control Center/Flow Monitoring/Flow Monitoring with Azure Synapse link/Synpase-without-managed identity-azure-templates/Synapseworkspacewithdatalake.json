{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspaceName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Synapse workspace to create."
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Azure Data Lake Storage account to use."
            }
        },
        "sqlPoolName": {
            "type": "string",
            "metadata": {
                "description": "The name of the SQL Serverless pool to create."
            }
        }
    },
    "variables": {
        "storageAccountResourceId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Synapse/workspaces",
            "apiVersion": "2021-03-01-preview",
            "name": "[parameters('workspaceName')]",
            "location": "[resourceGroup().location]",
            "properties": {}
        },
        {
            "type": "Microsoft.Synapse/workspaces/sqlPools",
            "apiVersion": "2021-03-01-preview",
            "name": "[concat(parameters('workspaceName'), '/', parameters('sqlPoolName'))]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Synapse/workspaces', parameters('workspaceName'))]"
            ],
            "properties": {
                "sku": {
                    "name": "SqlPoolLicenseIncluded",
                    "tier": "Standard"
                },
                "autoPause": {
                    "enabled": true,
                    "delayInMinutes": 15
                },
                "collation": "SQL_Latin1_General_CP1_CI_AS",
                "maxSizeBytes": "536870912000",
                "resourceId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Sql/servers/', parameters('workspaceName'), '-srv')]"
            }
        },
        {
            "type": "Microsoft.Synapse/workspaces/dataLakeStorageAccounts",
            "apiVersion": "2021-03-01-preview",
            "name": "[concat(parameters('workspaceName'), '/', parameters('storageAccountName'))]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Synapse/workspaces', parameters('workspaceName'))]",
                "[variables('storageAccountResourceId')]"
            ],
            "properties": {
                "storageAccountId": "[variables('storageAccountResourceId')]"
            }
        }
    ]
}
